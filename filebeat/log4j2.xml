<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} | %t | %p | %F:%L | %m%n" charset="UTF-8"/>
        </Console>

        <RollingFile name="ELK" fileName="logs/elk.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} | %t | %p | %F:%L | %m%n" charset="UTF-8"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="1MB"/>
            </Policies>
            <DefaultRolloverStrategy max="100"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ELK"/>
        </Root>
    </Loggers>
</Configuration>